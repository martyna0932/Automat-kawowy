<Window x:Class="CoffeeOrderApp.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="600" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Zaloguj się lub zarejestruj" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBlock Text="Imię:"/>
            <TextBox x:Name="RegistrationNameTextBox" Margin="0,5"/>
            <TextBlock Text="Nazwisko:"/>
            <TextBox x:Name="RegistrationSurnameTextBox" Margin="0,5"/>
            <TextBlock Text="Nazwa użytkownika:"/>
            <TextBox x:Name="RegistrationUsernameTextBox" Margin="0,5"/>
            <TextBlock Text="Hasło:" Margin="0,5"/>
            <PasswordBox x:Name="RegistrationPasswordBox" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
            <Button Content="Zarejestruj się" Width="100" Click="Register_Click"/>
            <Button Content="Powrót" Width="100" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
